<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootContainer" alignment="CENTER" maxHeight="400" maxWidth="600" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.tnote.balint.Controllers.RegLogController">
    <VBox>
        <HBox fx:id="regLogBtnContainer" maxWidth="200">
            <Button fx:id="regBtn" styleClass="regOrLogBtn" text="Regisztráció" textAlignment="CENTER" />
            <Button fx:id="loginBtn" styleClass="regOrLogBtn" text="Bejelentkezés" textAlignment="CENTER" />
        </HBox>
        <VBox maxWidth="200" prefWidth="200" styleClass="reglogInputContainer">
            <VBox styleClass="inputVbox">
                <Label styleClass="inputLabel" text="Név" />
                <TextField prefWidth="200" />
            </VBox>
            <VBox styleClass="inputVbox">
                <Label styleClass="inputLabel" text="Email" />
                <TextField prefWidth="200" />
            </VBox>
            <VBox styleClass="inputVbox">
                <Label styleClass="inputLabel" text="Jelszó" />
                <TextField prefWidth="200" />
            </VBox>
            <HBox alignment="CENTER_RIGHT">
                <Button onAction="#backBtnClick" text="Back" />
            </HBox>
        </VBox>
    </VBox>
</VBox>
